{% if state < 71 %}
	{% set active_class = 'active' %}
{% else %}
	{% set active_class = '' %}
{% endif %}
<div class="progress">
		<div class="progress-bar progress-bar-warning progress-bar-striped {{ active_class }}" role="progressbar" style="width:10%">
			New
		</div>
	{% if state > 10 %}
		<div class="progress-bar progress-bar-info progress-bar-striped {{ active_class }}" role="progressbar" style="width:30%">
			In progress
		</div>
	{% endif %}
	{% if state > 40 %}
		<div class="progress-bar progress-bar-striped {{ active_class }}" role="progressbar" style="width:30%">
			Shipped
		</div>
	{% endif %}
	{% if state > 70 %}
		<div class="progress-bar progress-bar-success progress-bar-striped {{ active_class }}" role="progressbar" style="width:30%">
			Delivered
		</div>
	{% endif %}
</div>